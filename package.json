{
  "private": true,
  "workspaces": {
    "packages": [
      "puzzle-shared",
      "puzzle-client",
      "puzzle-server"
    ],
    "nohoist": [
      "**"
    ]
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "prettier": "^2.2.1"
  },
  "scripts": {
    "watch-shared": "cd puzzle-shared && yarn run watch",
    "watch-server": "cd puzzle-server && yarn run watch",
    "watch-client": "cd puzzle-client && yarn run watch",
    "watch": "concurrently \"npm:watch-*\"",
    "format": "prettier --write .",
    "check-format": "prettier --check ."
  }
}
